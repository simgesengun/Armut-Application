<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArmutApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#33000000</item>
        <item name="android:statusBarColor" tools:targetApi="m"  tools:ignore="DuplicateDefinition">@color/surface_color</item>

        <!-- Customize your theme here. -->
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:colorControlNormal">@color/green</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>
</resources>